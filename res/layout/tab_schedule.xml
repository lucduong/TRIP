<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#E9EFF2"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="5dp" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_gravity="bottom|left"
                android:layout_weight="0.43"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="Hành Trình"
                android:textColor="#00a7f5"
                android:textSize="18sp"
                android:textStyle="normal|italic" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="150dp"
                android:layout_height="10dp"
                android:layout_weight="0.08"
                android:background="#00a7f5"
                android:gravity="center"
                android:paddingRight="10dp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center" >

            <ImageView
                android:id="@+id/img"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:contentDescription="@null"
                android:gravity="center"
                android:src="@drawable/bg_date" />

            <TextView
                android:id="@+id/txt_day"
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:layout_alignBottom="@+id/img"
                android:layout_alignRight="@+id/img"
                android:layout_alignTop="@+id/img"
                android:gravity="center_horizontal|center_vertical"
                android:text="2"
                android:textColor="#FFFFFF"
                android:textSize="22sp" />
        </RelativeLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/linear34"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="3dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <ListView
            android:id="@+id/listView_days"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:background="#00a7f5"
            android:choiceMode="singleChoice"
            android:dividerHeight="0.5dp"
            android:focusable="true" >
        </ListView>

        <ListView
            android:id="@+id/listViewStation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:dividerHeight="0.5dp" >
        </ListView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="10dp" >

            <EditText
                android:id="@+id/img_title"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="5dp"
                android:adjustViewBounds="true"
                android:background="@drawable/bg_edit_text"
                android:contentDescription="@null"
                android:hint="Thoi gian"
                android:paddingLeft="10dp"
                android:textSize="10dp"
                android:textStyle="normal|italic" />

            <EditText
                android:id="@+id/txt_title"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_toLeftOf="@+id/cmp_title"
                android:layout_toRightOf="@+id/img_title"
                android:background="@drawable/bg_edit_text"
                android:drawableRight="@drawable/ic_search"
                android:hint="Ten chuyen phuot"
                android:paddingLeft="10dp"
                android:paddingRight="3dp"
                android:text="Dia diem"
                android:textColor="@color/txt_color"
                android:textSize="10sp"
                android:textStyle="normal|italic" >
            </EditText>
        </RelativeLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/bg_edit_text"
            android:hint="Mô Tả "
            android:paddingLeft="10dp"
            android:textColor="@color/txt_color"
            android:textSize="10sp"
            android:textStyle="normal|italic" >
        </EditText>

        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="10dp" >

            <Button
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_login_btn"
                android:text="Add"
                android:textColor="#FFFF"
                android:textSize="12dp" />

            <Button
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_login_btn"
                android:text="Remove"
                android:textColor="#FFFF"
                android:textSize="12dp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
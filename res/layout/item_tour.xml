<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lnl_wrapper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9EFF2"
    android:orientation="vertical"
    android:paddingRight="15dp" >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="125dp" >

        <LinearLayout
            android:id="@+id/lnl_trp_thumb"
            android:layout_width="fill_parent"
            android:layout_height="125dp"
            android:layout_gravity="left"
            android:layout_marginLeft="15dp"
            android:background="@drawable/phuquoc"
            android:orientation="horizontal" />

        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="55dp"
            android:layout_height="45dp"
            android:layout_gravity="bottom|left"
            android:layout_marginLeft="5dp"
            android:background="@drawable/dt_background"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txt_day"
                android:layout_width="80sp"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:gravity="center_horizontal"
                android:text="22"
                android:textColor="#FFFFFF"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/txt_month"
                android:layout_width="80sp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:gravity="center_horizontal"
                android:text="OCTOBER"
                android:textColor="#FFFFFF"
                android:textSize="11sp" />
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/linear3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="15dp" >

        <LinearLayout
            android:id="@+id/linear4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/panel_background"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txt_trp_nm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingLeft="10dp"
                android:text="Du Xuân Xuyên Việt 2014"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txt_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="2dp"
                android:paddingLeft="20dp"
                android:text="20-10-2013 ~ 30-10 - 2013"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnl_cmt"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_without_border_top"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" >

            <TextView
                android:id="@+id/txt_tour_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.73"
                android:drawableLeft="@drawable/like"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text=""
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txt_cmt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.54"
                android:drawableLeft="@drawable/comment"
                android:text=""
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txt_member"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.53"
                android:drawableLeft="@drawable/manager"
                android:text=""
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>